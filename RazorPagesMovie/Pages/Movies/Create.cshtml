@page
@model RazorPagesMovie.Pages.Movies.CreateModel

@{
    ViewData["Title"] = "Написать";
}

<h1>Написать сообщение</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Movie.Содержимое" class="control-label"></label>
                <input asp-for="Movie.Содержимое" class="form-control" />
                <span asp-validation-for="Movie.Содержимое" class="text-danger"></span>
            </div>
            <div class="form-group">

               
               
            </div>

            <div class="form-group">
                <input type="submit" value="Написать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
}

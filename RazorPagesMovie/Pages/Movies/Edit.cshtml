@page
@model RazorPagesMovie.Pages.Movies.EditModel

@{
    ViewData["содержимое"] = "редактировать";
}

<h1>Редактировать</h1>

<h4>Письмо</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Movie.ID" />
            <div class="form-group">
                <label asp-for="Movie.Содержимое" class="control-label"></label>
                <input asp-for="Movie.Содержимое" class="form-control" />
                <span asp-validation-for="Movie.Содержимое" class="text-danger"></span>
            </div>
                    
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
